<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:elevation="16dp"
        android:fadingEdge="vertical"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <TextView
                android:id="@+id/admin_name"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:hint="@string/name"
                android:padding="3dp"
                android:textColor="@color/backgroundBlack"
                android:textColorHint="@color/backgroundBlack"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/admin_company"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:hint="Company Name"
                android:padding="3dp"
                android:textColor="@color/backgroundBlack"
                android:textColorHint="@color/backgroundBlack"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/admin_name"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/admin_name"
                app:layout_constraintTop_toBottomOf="@+id/admin_name" />

            <TextView
                android:id="@+id/admin_address"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="70dp"
                android:gravity="center"
                android:hint="Address"
                android:textColor="@color/backgroundBlack"
                android:textColorHint="@color/backgroundBlack"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/admin_name"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/admin_name"
                app:layout_constraintTop_toBottomOf="@+id/admin_name" />


            <TextView
                android:id="@+id/admin_contact"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="120dp"
                android:gravity="center"
                android:hint="Contact No."
                android:padding="3dp"
                android:textColor="@color/backgroundBlack"
                android:textColorHint="@color/backgroundBlack"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/admin_name"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/admin_name"
                app:layout_constraintTop_toBottomOf="@+id/admin_name" />

            <TextView
                android:id="@+id/admin_date"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="172dp"
                android:gravity="center"
                android:hint="Date"
                android:padding="3dp"
                android:textColor="@color/backgroundBlack"
                android:textColorHint="@color/backgroundBlack"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/admin_name"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/admin_name"
                app:layout_constraintTop_toBottomOf="@+id/admin_name" />

            <TextView
                android:id="@+id/admin_status"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="224dp"
                android:gravity="center"
                android:hint="Status"
                android:padding="3dp"
                android:textColor="@color/backgroundBlack"
                android:textColorHint="@color/backgroundBlack"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/admin_name"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/admin_name"
                app:layout_constraintTop_toBottomOf="@+id/admin_name" />

            <TextView
                android:id="@+id/admin_reason"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="272dp"
                android:gravity="center"
                android:hint="Reason"
                android:padding="3dp"
                android:textColor="@color/backgroundBlack"
                android:textColorHint="@color/backgroundBlack"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/admin_name"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/admin_name"
                app:layout_constraintTop_toBottomOf="@+id/admin_name" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>